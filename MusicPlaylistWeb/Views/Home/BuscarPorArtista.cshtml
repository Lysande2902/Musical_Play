@model List<MusicPlaylistWeb.Models.Song>
@{
    ViewData["Title"] = "Buscar por Artista";
}

<h1>üîç Buscar por Artista (Operaci√≥n Libre 1)</h1>

<div class="info-box">
    <div class="info-box-title">
        <span class="info-box-icon">üÜï</span>
        Operaci√≥n 11: Buscar por Artista (Operaci√≥n Libre)
    </div>
