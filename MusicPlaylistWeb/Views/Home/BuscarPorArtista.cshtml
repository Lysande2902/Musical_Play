<div class="search-box">
    <form asp-action="BuscarPorArtista" method="get" style="display: flex; gap: 1rem; width: 100%;">
        <input type="text" class="form-control" name="artista" placeholder="Nombre del artista..." value="@ViewBag.Artista" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
</div>

@if (Model != null && Model.Any())
{
    <h2>Resultados para "@ViewBag.Artista"</h2>
    <div class="song-list">
        @foreach (var song in Model)
        {
            <div class="song-item">
                <div class="song-id">@song.Id</div>
                <div class="song-info">
                    <div class="song-title">@song.Titulo</div>
                    <div class="song-artist">@song.Artista</div>
                </div>
                <div class="song-details">
                    <span>‚è±Ô∏è @song.DuracionFormateada</span>
                    <span>‚≠ê @song.Popularidad%</span>
                </div>
            </div>
        }
    </div>
}
else if (!string.IsNullOrEmpty(ViewBag.Artista))
{
    <div class="empty-state">
        <h3>No se encontraron canciones</h3>
        <p>No hay canciones del artista "@ViewBag.Artista"</p>
    </div>
}
