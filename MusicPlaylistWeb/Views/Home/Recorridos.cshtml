    align-items: center;
    padding: 1rem 1.5rem;
    margin-bottom: 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    transition: all 0.3s ease;
    border-left: 4px solid transparent;
}

.traversal-item-full:hover {
    background: rgba(29, 185, 84, 0.2);
    transform: translateX(10px);
    border-left-color: #1DB954;
    box-shadow: 0 4px 15px rgba(29, 185, 84, 0.2);
}

.item-number {
    color: #1DB954;
    font-weight: bold;
    font-size: 0.95rem;
    min-width: 30px;
}

.item-id {
    color: #1DB954;
    font-weight: 600;
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
    background: rgba(29, 185, 84, 0.1);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
}

.item-title {
    color: #ffffff;
    font-weight: 500;
    font-size: 0.95rem;
}

.item-artist {
    color: #b3b3b3;
    font-size: 0.9rem;
}

.item-duration {
    color: #1DB954;
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
    font-weight: 600;
}

.item-popularity {
    color: #ffc107;
    font-weight: bold;
    font-size: 0.9rem;
}

@@media (max-width: 768px) {
    .selector-buttons {
        grid-template-columns: 1fr 1fr;
    }
    
    .traversal-item-full {
        grid-template-columns: auto 1fr;
        gap: 0.5rem;
    }
    
    .item-id,
    .item-title,
    .item-artist,
    .item-duration,
    .item-popularity {
        grid-column: 1 / -1;
    }
}
</style>
