@{
    ViewData["Title"] = "Recorridos del Árbol";
    var tipoRecorrido = ViewBag.TipoRecorrido ?? "inorden";
}

<h1><i class="fas fa-project-diagram"></i> Recorridos del Árbol</h1>

<div class="info-box">
    <div class="info-box-title">
        <span class="info-box-icon"><i class="fas fa-sync-alt"></i></span>
        Operaciones 5-8: Recorridos del Árbol
    </div>
    <div class="info-box-content">
        <strong>Métodos C#:</strong> RecorridoInorden(), RecorridoPreorden(), RecorridoPostorden(), RecorridoPorNiveles()<br>
        <strong>Complejidad:</strong> O(n) todos | <strong>Implementación:</strong> Recursión (In/Pre/Post), Queue&lt;Node&gt; (Niveles)<br>
        <strong>Descripción:</strong> Diferentes formas de recorrer el árbol. Inorden muestra orden ascendente, Niveles usa BFS.
    </div>
</div>

<div class="selector-container">
    <h2>Selecciona el tipo de recorrido:</h2>
    <div class="selector-buttons">
        <a href="@Url.Action("Recorridos", new { tipo = "inorden" })" 
           class="selector-btn @(tipoRecorrido == "inorden" ? "active" : "")">
            <span class="btn-icon"><i class="fas fa-sort-amount-up"></i></span>
            <span class="btn-text">Inorden</span>
            <span class="btn-subtitle">Izq → Nodo → Der</span>
        </a>
        <a href="@Url.Action("Recorridos", new { tipo = "preorden" })" 
           class="selector-btn @(tipoRecorrido == "preorden" ? "active" : "")">
            <span class="btn-icon"><i class="fas fa-arrow-down"></i></span>
            <span class="btn-text">Preorden</span>
            <span class="btn-subtitle">Nodo → Izq → Der</span>
        </a>
        <a href="@Url.Action("Recorridos", new { tipo = "postorden" })" 
           class="selector-btn @(tipoRecorrido == "postorden" ? "active" : "")">
            <span class="btn-icon"><i class="fas fa-arrow-up"></i></span>
            <span class="btn-text">Postorden</span>
            <span class="btn-subtitle">Izq → Der → Nodo</span>
        </a>
        <a href="@Url.Action("Recorridos", new { tipo = "niveles" })" 
           class="selector-btn @(tipoRecorrido == "niveles" ? "active" : "")">
            <span class="btn-icon"><i class="fas fa-layer-group"></i></span>
            <span class="btn-text">Por Niveles</span>
            <span class="btn-subtitle">BFS</span>
        </a>
    </div>
</div>

<div class="traversal-display">
    @if (tipoRecorrido == "inorden")
    {
        <div class="traversal-card-full">
            <div class="traversal-header">
                <div class="traversal-title">
                    <span class="traversal-icon"><i class="fas fa-sort-amount-up"></i></span>
                    <span>Recorrido Inorden</span>
                </div>
                <div class="traversal-subtitle">Izquierdo → Nodo → Derecho</div>
            </div>
            <div class="traversal-description">
                <strong>Orden:</strong> ASCENDENTE por ID<br>
                <strong>Uso:</strong> Mostrar elementos ordenados<br>
                <strong>Implementación:</strong> Recursión (visita subárbol izquierdo, nodo actual, subárbol derecho)
            </div>
            <div class="traversal-list-full">
                @{int index = 1;}
                @foreach (var song in ViewBag.Inorden)
                {
                    <div class="traversal-item-full">
                        <span class="item-number">@index.</span>
                        <span class="item-id">[ID: @song.Id]</span>
                        <span class="item-title">@song.Titulo</span>
                        <span class="item-artist">@song.Artista</span>
                        <span class="item-duration">@song.DuracionFormateada</span>
                        <span class="item-popularity">@song.Popularidad%</span>
                    </div>
                    index++;
                }
            </div>
        </div>
    }
    else if (tipoRecorrido == "preorden")
    {
        <div class="traversal-card-full">
            <div class="traversal-header">
                <div class="traversal-title">
                    <span class="traversal-icon"><i class="fas fa-arrow-down"></i></span>
                    <span>Recorrido Preorden</span>
                </div>
                <div class="traversal-subtitle">Nodo → Izquierdo → Derecho</div>
            </div>
            <div class="traversal-description">
                <strong>Orden:</strong> RAÍZ primero<br>
                <strong>Uso:</strong> Copiar estructura del árbol, crear copia del árbol<br>
                <strong>Implementación:</strong> Recursión (visita nodo actual, subárbol izquierdo, subárbol derecho)
            </div>
            <div class="traversal-list-full">
                @{int index = 1;}
                @foreach (var song in ViewBag.Preorden)
                {
                    <div class="traversal-item-full">
                        <span class="item-number">@index.</span>
                        <span class="item-id">[ID: @song.Id]</span>
                        <span class="item-title">@song.Titulo</span>
                        <span class="item-artist">@song.Artista</span>
                        <span class="item-duration">@song.DuracionFormateada</span>
                        <span class="item-popularity">@song.Popularidad%</span>
                    </div>
                    index++;
                }
            </div>
        </div>
    }
    else if (tipoRecorrido == "postorden")
    {
        <div class="traversal-card-full">
            <div class="traversal-header">
                <div class="traversal-title">
                    <span class="traversal-icon"><i class="fas fa-arrow-up"></i></span>
                    <span>Recorrido Postorden</span>
                </div>
                <div class="traversal-subtitle">Izquierdo → Derecho → Nodo</div>
            </div>
            <div class="traversal-description">
                <strong>Orden:</strong> HOJAS primero<br>
                <strong>Uso:</strong> Eliminar árbol, calcular expresiones, liberar memoria<br>
                <strong>Implementación:</strong> Recursión (visita subárbol izquierdo, subárbol derecho, nodo actual)
            </div>
            <div class="traversal-list-full">
                @{int index = 1;}
                @foreach (var song in ViewBag.Postorden)
                {
                    <div class="traversal-item-full">
                        <span class="item-number">@index.</span>
                        <span class="item-id">[ID: @song.Id]</span>
                        <span class="item-title">@song.Titulo</span>
                        <span class="item-artist">@song.Artista</span>
                        <span class="item-duration">@song.DuracionFormateada</span>
                        <span class="item-popularity">@song.Popularidad%</span>
                    </div>
                    index++;
                }
            </div>
        </div>
    }
    else if (tipoRecorrido == "niveles")
    {
        <div class="traversal-card-full">
            <div class="traversal-header">
                <div class="traversal-title">
                    <span class="traversal-icon"><i class="fas fa-layer-group"></i></span>
                    <span>Recorrido Por Niveles (BFS)</span>
                </div>
                <div class="traversal-subtitle">Nivel por Nivel, Izquierda → Derecha</div>
            </div>
            <div class="traversal-description">
                <strong>Orden:</strong> NIVEL por NIVEL<br>
                <strong>Uso:</strong> Búsqueda por niveles, encontrar nodo más cercano a raíz<br>
                <strong>Implementación:</strong> Iterativo con Queue&lt;Node&gt; (BFS - Breadth First Search)
            </div>
            <div class="traversal-list-full">
                @{int index = 1;}
                @foreach (var song in ViewBag.PorNiveles)
                {
                    <div class="traversal-item-full">
                        <span class="item-number">@index.</span>
                        <span class="item-id">[ID: @song.Id]</span>
                        <span class="item-title">@song.Titulo</span>
                        <span class="item-artist">@song.Artista</span>
                        <span class="item-duration">@song.DuracionFormateada</span>
                        <span class="item-popularity">@song.Popularidad%</span>
                    </div>
                    index++;
                }
            </div>
        </div>
    }
</div>

<style>
.selector-container {
    margin: 2rem 0;
}

.selector-container h2 {
    color: #1DB954;
    margin-bottom: 1.5rem;
    font-size: 1.3rem;
}

.selector-buttons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.selector-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem;
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    border: 2px solid rgba(29, 185, 84, 0.2);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
}

.selector-btn:hover {
    border-color: #1DB954;
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(29, 185, 84, 0.3);
}

.selector-btn.active {
    border-color: #1DB954;
    background: linear-gradient(135deg, rgba(29, 185, 84, 0.2) 0%, rgba(29, 185, 84, 0.1) 100%);
    box-shadow: 0 0 20px rgba(29, 185, 84, 0.4);
}

.selector-btn .btn-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #1DB954;
}

.selector-btn .btn-icon i {
    font-size: 2.5rem;
}

.selector-btn .btn-text {
    font-size: 1.2rem;
    font-weight: bold;
    color: #1DB954;
    margin-bottom: 0.25rem;
}

.selector-btn .btn-subtitle {
    font-size: 0.85rem;
    color: #b3b3b3;
    font-style: italic;
}

.traversal-display {
    margin-top: 2rem;
}

.traversal-card-full {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    border-radius: 16px;
    padding: 2.5rem;
    border: 2px solid #1DB954;
    box-shadow: 0 8px 30px rgba(29, 185, 84, 0.3);
}

.traversal-header {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 3px solid rgba(29, 185, 84, 0.4);
}

.traversal-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    font-weight: bold;
    color: #1DB954;
    margin-bottom: 0.75rem;
}

.traversal-icon {
    font-size: 2rem;
    color: #1DB954;
}

.traversal-icon i {
