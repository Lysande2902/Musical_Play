@model List<MusicPlaylistWeb.Models.Song>

@{
    ViewData["Title"] = "Buscar por Nivel";
}

<h1>üîç Buscar Canciones por Nivel del √Årbol</h1>

<div class="info-box">
    <div class="info-box-title">
        <span class="info-box-icon">üå≥</span>
        B√∫squeda por Nivel en el √Årbol Binario
    </div>
    <div class="info-box-content">
        <strong>Descripci√≥n:</strong> Encuentra todas las canciones que se encuentran en un nivel espec√≠fico del √°rbol.<br>
        <strong>Nivel 0:</strong> Ra√≠z del √°rbol | <strong>Altura actual:</strong> @ViewBag.AlturaMaxima niveles (0 a @(ViewBag.AlturaMaxima - 1))<br>
        <strong>Complejidad:</strong> O(n) - Recorre todos los nodos verificando su nivel
    </div>
</div>

<div class="card">
    <form method="get" asp-action="BuscarPorNivel" class="search-form">
        <div class="form-group">
            <label for="nivel">Nivel del √Årbol (0 a @(ViewBag.AlturaMaxima - 1)):</label>
            <input type="number" 
                   id="nivel" 
                   name="nivel" 
                   class="form-control" 
                   min="0" 
                   max="@(ViewBag.AlturaMaxima - 1)"
                   value="@ViewBag.Nivel"
                   placeholder="Ingrese el nivel (ej: 0, 1, 2...)" 
                   required>
            <small class="form-text">Nivel 0 = Ra√≠z, Nivel 1 = Hijos de la ra√≠z, etc.</small>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Buscar en Nivel
        </button>
        <a href="@Url.Action("Estadisticas")" class="btn btn-secondary">
            <i class="fas fa-chart-bar"></i> Ver Estructura Completa
        </a>
    </form>
</div>

@if (ViewBag.Nivel != null)
{
    <div class="card">
        <h2>üìä Resultados para Nivel @ViewBag.Nivel</h2>
        
        @if (Model != null && Model.Any())
        {
            <div class="alert alert-success">
                <strong>‚úì Se encontraron @Model.Count canci√≥n(es) en el nivel @ViewBag.Nivel</strong>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>T√≠tulo</th>
                            <th>Artista</th>
                            <th>Duraci√≥n</th>
                            <th>Popularidad</th>
                            <th>Nivel</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cancion in Model)
                        {
                            <tr>
                                <td><strong>@cancion.Id</strong></td>
                                <td>@cancion.Titulo</td>
                                <td>@cancion.Artista</td>
                                <td>@cancion.DuracionFormateada</td>
                                <td>
                                    <div class="popularity-bar">
                                        <div class="popularity-fill" style="width: @cancion.Popularidad%"></div>
                                        <span class="popularity-text">@cancion.Popularidad%</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-level">Nivel @ViewBag.Nivel</span>
                                </td>
                                <td>
                                    <a href="@Url.Action("Editar", new { id = cancion.Id })" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a href="@Url.Action("Buscar", new { id = cancion.Id })" class="btn btn-sm btn-info">
                                        <i class="fas fa-info-circle"></i> Detalles
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="stats-summary">
                <h3>üìà Estad√≠sticas del Nivel @ViewBag.Nivel</h3>
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-value">@Model.Count</div>
                        <div class="stat-label">Canciones en este nivel</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">@Model.Average(c => c.Popularidad).ToString("F1")%</div>
                        <div class="stat-label">Popularidad Promedio</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value">@TimeSpan.FromSeconds(Model.Sum(c => c.Duracion)).ToString(@"hh\:mm\:ss")</div>
                        <div class="stat-label">Duraci√≥n Total</div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <strong>‚ö† No se encontraron canciones en el nivel @ViewBag.Nivel</strong>
                <p>Este nivel est√° vac√≠o o no existe en el √°rbol actual.</p>
                <p>La altura del √°rbol es @ViewBag.AlturaMaxima, por lo que los niveles v√°lidos son de 0 a @(ViewBag.AlturaMaxima - 1).</p>
            </div>
        }
    </div>
}

