<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Playlist Musical ABB</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a asp-controller="Home" asp-action="Index">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
                        </svg>
                        <span>Playlist Musical</span>
                    </a>
                </div>
                <ul class="navbar-menu">
                    <li>
                        <a asp-controller="Home" asp-action="Index" class="tooltip-link">
                            <i class="fas fa-home"></i> Inicio
                            <span class="tooltip-text">Ver todas las canciones ordenadas (Inorden)</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Agregar" class="tooltip-link">
                            <i class="fas fa-plus-circle"></i> Agregar Canción
                            <span class="tooltip-text">Insertar un elemento en el árbol</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Buscar" class="tooltip-link">
                            <i class="fas fa-search"></i> Buscar
                            <span class="tooltip-text">Buscar un elemento por ID en el árbol</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="BuscarPorArtista" class="tooltip-link">
                            <i class="fas fa-user-music"></i> Buscar por Artista
                            <span class="tooltip-text">Operación Libre 1: Búsqueda parcial por artista</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="TopPopulares" class="tooltip-link">
                            <i class="fas fa-fire"></i> Top Populares
                            <span class="tooltip-text">Operación Libre 2: Canciones más populares</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Recorridos" class="tooltip-link">
                            <i class="fas fa-route"></i> Recorridos
                            <span class="tooltip-text">Ver Preorden, Postorden, Inorden y Por Niveles</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Estadisticas" class="tooltip-link">
                            <i class="fas fa-chart-bar"></i> Estadísticas
                            <span class="tooltip-text">Altura del árbol y nivel de nodos</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="BuscarPorNivel" class="tooltip-link">
                            <i class="fas fa-layer-group"></i> Buscar por Nivel
                            <span class="tooltip-text">Encontrar canciones en un nivel específico del árbol</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Ayuda" class="tooltip-link" style="color: var(--spotify-green);">
                            <i class="fas fa-question-circle"></i> Ayuda
                            <span class="tooltip-text">Guía completa de todas las operaciones</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-error">
                    @TempData["Error"]
                </div>
            }
            @RenderBody()
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2025 - Playlist Musical ABB | Grupo 4 E - DSM</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
